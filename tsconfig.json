{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./", // Required for paths to work
    "paths": {
      "@/*": [
        "./src/*"
      ], // Maps `@/` to `./src/`
      "@assets/*": [
        "./assets/*"
      ] // Optional: Shortcut for assets
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}